@page
@model CounterModel

@{
    ViewData["SubSection"] = "counter";
    ViewData["Title"] = "help";
    ViewData["ReturnPath"] = "/counter";

    Layout = "Shared/HeaderBreadcrumbControl";
    
    ViewData["Breadcrumbs"] = new List<TabControlObject>
    {
        new TabControlObject("Index", ViewData["ReturnPath"].ToString()),
        new TabControlObject("hi", ViewData["ReturnPath"].ToString()),
    };
}

<h1>Counter</h1>

<p id="count">Current count: 0</p>

<button class="home-btn-big btn-big" onclick="IncrementCount()">Click me</button>

<script>
let currentCount = 0;

function IncrementCount()
{
    currentCount++;
    
    let element = document.getElementById("count");
    element.innerText = `Current count: ${currentCount}`;
}
</script>